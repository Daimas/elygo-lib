<resources>
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="detailedSeekBar_titleStyle">@style/DetailedSeekBar_Title</item>
        <item name="detailedSeekBar_descriptionStyle">@style/DetailedSeekBar_Description</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextAppearance">@style/ActionBar_TitleText</item>
        <item name="subtitleTextAppearance">@style/ActionBar_SubtitleText</item>
    </style>

    <style name="ActionBar_TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ActionBar_SubtitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#555</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailedSeekBar_Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DetailedSeekBar_Description" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="FormButtonText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PanelScore_PlayerName">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#444</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PanelScore_PlayerTime">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#AAA</item>
    </style>

    <style name="BigBottomButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
</resources>