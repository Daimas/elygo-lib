<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid
                    android:color="#888"/>
            <size
                    android:height="1dp"/>
        </shape>
    </item>
    <item android:top="1dp">
        <shape android:shape="rectangle">
            <gradient
                    android:angle="270"
                    android:startColor="#F4F4F4"
                    android:endColor="#D6D6D6"
                    android:type="linear"/>
        </shape>
    </item>

</layer-list>